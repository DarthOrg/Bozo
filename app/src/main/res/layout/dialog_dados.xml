<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/adicionarJogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adicionarJogador"
        android:drawableLeft="@drawable/ic_add_jogador"
        android:drawablePadding="16dp"
        android:padding="20dp"
        android:background="@color/colorTrasnparente"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textAlignment="textStart"/>
   <Button
       android:id="@+id/removerJogador"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/removerJogador"
       android:drawableLeft="@drawable/ic_deletar_jogador"
       android:drawablePadding="16dp"
       android:padding="20dp"
       android:background="@color/colorTrasnparente"
       android:textAllCaps="false"
       android:textSize="15dp"
       android:textAlignment="textStart"/>

</LinearLayout>
