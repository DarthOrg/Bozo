<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackTransparente5"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rgConfigPontuacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">


        <RadioButton
            android:id="@+id/opcao1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_dado_az" />

        <RadioButton
            android:id="@+id/opcao2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_dado_duque" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/cbDisplayLigado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display ligado durante o jogo"/>


</LinearLayout>

