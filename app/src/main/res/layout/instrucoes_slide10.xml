<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundoInstruções">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_above="@+id/tituloI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_dado_duque"
            android:tint="@color/colorCinza"
            android:layout_gravity="center"
            android:id="@+id/imageView6"
            android:layout_marginRight="27dp"
            android:layout_marginTop="27dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_dado_duque"
            android:tint="@color/colorCinza"
            android:layout_gravity="center"
            android:id="@+id/imageView7"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="27dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_dado_duque"
            android:tint="@color/colorCinza"
            android:layout_gravity="center"
            android:id="@+id/imageView18"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="27dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_dado_duque"
            android:tint="@color/colorCinza"
            android:layout_gravity="center"
            android:id="@+id/imageView20"
            android:layout_marginLeft="27dp"
            android:layout_marginBottom="27dp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/tituloI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tituloInstrucoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Como jogar?"
            android:textColor="@color/colorTrasnparente"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />


    </LinearLayout>

    <android.support.v7.widget.CardView

        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tituloI"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/TextoDadosQuadrada"
            android:textAlignment="center"
            android:textSize="13dp"
            android:layout_margin="10dp"
            android:textColor="@color/colorCinza" />


    </android.support.v7.widget.CardView>
</RelativeLayout>