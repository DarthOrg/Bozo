<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteFundo">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/colorWhiteFundo">



        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:background="@color/colorTransparente"
            app:title=" ">
        </android.support.v7.widget.Toolbar>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tema do Copo"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="-40dp"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"/>
        </android.support.design.widget.AppBarLayout>


            <GridView
                android:id="@+id/gvTemas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:layout_margin="5dp"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
                >

            </GridView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnTemaPadrao"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:backgroundTint="@color/colorNormal"
        android:src="@drawable/ic_atualizar_white"
        android:layout_margin="20dp"
        android:clickable="true"
        android:layout_gravity="top|right"/>
</android.support.design.widget.CoordinatorLayout>
