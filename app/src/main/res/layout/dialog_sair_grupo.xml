<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <!--Contexto-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/TextoSairGrupo"
            android:textSize="15dp"
            android:textColor="@color/colorBlack"
            android:layout_gravity="left|center_vertical"/>
    </FrameLayout>


    <!--Linha-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorCinza"/>


    <!--BotÃµes-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_horizontal">


        <!--Salvar-->
        <Button
            style="?android:attr/absListViewStyle"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Descartar"
            android:background="@color/colorTrasnparente"
            android:id="@+id/btnDescartar"
            android:layout_gravity="left|center_vertical" />


        <!--Linha meio-->
        <FrameLayout
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="@color/colorCinza"
            android:layout_gravity="center" />


        <!--Descartar-->
        <Button
            style="?android:attr/absListViewStyle"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Salvar"
            android:background="@color/colorTrasnparente"
            android:id="@+id/btnSalvar"
            android:layout_gravity="right|center_vertical" />


    </FrameLayout>




</LinearLayout>
