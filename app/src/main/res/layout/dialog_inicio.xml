<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="@color/colorFAB">


        <ImageButton
            android:id="@+id/btn_nova_partida"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/colorTrasnparente"
            android:src="@drawable/ic_nova_partida"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Novo grupo de jogo"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_below="@+id/btn_nova_partida"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/textoDialogInicioGrupoDeJogo"
            android:textColor="@color/colorWhiteTransparente"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
    <Button
        style="?android:attr/absListViewStyle"
        android:id="@+id/btn_partidas_salvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grupos salvos"
        android:textSize="15dp"
        android:textStyle="normal"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorCinzaEscuro"
        android:drawableStart="@drawable/ic_lista"
        android:background="@color/colorWhite"
        android:textAlignment="textStart"
        android:padding="20dp"/>
    <Button
        style="?android:attr/absListViewStyle"
        android:id="@+id/btn_configuracoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:textSize="15dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:textStyle="normal"
        android:textColor="@color/colorCinzaEscuro"
        android:drawableStart="@drawable/ic_configuracoes"
        android:background="@color/colorWhite"
        android:textAlignment="viewStart"
        android:padding="20dp"/>
    <Button
        style="?android:attr/absListViewStyle"
        android:id="@+id/btn_instrucoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instruções"
        android:textSize="15dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:textStyle="normal"
        android:textColor="@color/colorCinzaEscuro"
        android:drawableStart="@drawable/ic_instrucoes"
        android:background="@color/colorWhite"
        android:textAlignment="viewStart"
        android:padding="20dp"/>
    <Button
        style="?android:attr/absListViewStyle"
        android:id="@+id/btn_sobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sobre"
        android:textSize="15dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:textStyle="normal"
        android:textColor="@color/colorCinzaEscuro"
        android:drawableStart="@drawable/ic_sobre"
        android:background="@color/colorWhite"
        android:textAlignment="viewStart"
        android:padding="20dp"/>
</LinearLayout>
