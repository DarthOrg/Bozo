<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <Button
        style="?android:attr/absListViewStyle"
        android:id="@+id/btn_nova_partida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NovoGrupoDeJogo"
        android:textSize="15dp"
        android:textStyle="normal"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorWhite"
        android:drawableStart="@drawable/ic_nova_partida_white"
        android:background="@color/colorAccent"
        android:textAlignment="textStart"
        android:padding="20dp"/>

    <RelativeLayout
        android:id="@+id/txt_btn_novo_grupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorFABPressedAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/TextoNovoGrupo"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <Button
        style="?android:attr/absListViewStyle"
        android:id="@+id/btn_partidas_salvas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/GruposSalvos"
        android:textSize="15dp"
        android:textStyle="normal"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorCinzaEscuro"
        android:drawableStart="@drawable/ic_lista"
        android:background="@color/colorWhite"
        android:textAlignment="textStart"
        android:padding="20dp"/>
    <Button
        style="?android:attr/absListViewStyle"
        android:id="@+id/btn_configuracoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Configuracoes"
        android:textSize="15dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:textStyle="normal"
        android:textColor="@color/colorCinzaEscuro"
        android:drawableStart="@drawable/ic_configuracoes"
        android:background="@color/colorWhite"
        android:textAlignment="viewStart"
        android:padding="20dp"/>
    <Button
        style="?android:attr/absListViewStyle"
        android:id="@+id/btn_instrucoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Instrucoes"
        android:textSize="15dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:textStyle="normal"
        android:textColor="@color/colorCinzaEscuro"
        android:drawableStart="@drawable/ic_instrucoes"
        android:background="@color/colorWhite"
        android:textAlignment="viewStart"
        android:padding="20dp"/>
    <Button
        style="?android:attr/absListViewStyle"
        android:id="@+id/btn_sobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Sobre"
        android:textSize="15dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:textStyle="normal"
        android:textColor="@color/colorCinzaEscuro"
        android:drawableStart="@drawable/ic_sobre"
        android:background="@color/colorWhite"
        android:textAlignment="viewStart"
        android:padding="20dp"/>
</LinearLayout>
