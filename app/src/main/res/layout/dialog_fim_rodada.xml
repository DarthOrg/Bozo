<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganhador"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:textColor="@color/colorAccentDark"
                android:textAllCaps="false"/>
            <TextView
                android:id="@+id/ganhadorRodada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wendell"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textColor="@color/colorLaranja"
                android:textAllCaps="false"
                android:textStyle="normal|bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:srcCompat="@drawable/img_trofeu"
                android:id="@+id/imageView5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPlacarRodada"
                android:text="Placar da rodada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTrasnparente"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:drawableBottom="@drawable/ic_seta_espandir"
                android:drawablePadding="-15dp"
                android:textAllCaps="false"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/jogadoresFimRodada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Wendell"
                android:visibility="gone"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="@color/colorBlackTransparente2"
                android:textAllCaps="false"
                android:textStyle="normal|bold" />
        </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBlackTransparente3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/colorWhiteFundo">

        <Button
            android:text="Quer jogar outra rodada?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTrasnparente"
            android:textColor="@color/colorBlack"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btnJogarNovaRodada"
            android:text="Jogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTrasnparente"
            android:textColor="@color/colorLaranja"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:paddingRight="32dp"/>

        <Button
            android:id="@+id/btncancelar"
            android:text="Cancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTrasnparente"
            android:textColor="@color/colorAccentDark"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:paddingRight="32dp"/>

        <Button
            android:id="@+id/btnSairMarcador"
            android:text="Sair do marcador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTrasnparente"
            android:textColor="@color/colorAccentDark"
            android:textAlignment="textEnd"
            android:textAllCaps="false"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:paddingRight="32dp"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>