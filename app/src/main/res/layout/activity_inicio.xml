<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".view.NovaPartida"
    android:orientation="vertical"
    android:background="@color/colorFundo"
    android:weightSum="1">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTrasnparente"
        app:elevation="0dp">

        <!--TOOLBAR TOPO-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!--Campo de informações dos dados-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center">


            <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_jogar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_white"
            fab:fab_colorNormal="@color/colorFab"
            fab:fab_colorPressed="@color/colorFabPressed"
            android:layout_gravity="center" />

            <!--Dado 1(Áz)-->


            <ImageView
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:id="@+id/imageView3"
                android:layout_marginTop="80dp"
                android:layout_gravity="center_horizontal|top"
                android:src="@drawable/nome_bozo" />


        </FrameLayout>


    </FrameLayout>

</LinearLayout>