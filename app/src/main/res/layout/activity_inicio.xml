<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".view.NovaPartida"
    android:orientation="vertical"
    android:background="@color/colorFundoPartida"
    android:weightSum="1">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTrasnparente"
        app:elevation="0dp">

        <!--TOOLBAR TOPO-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="15dp"
            android:background="@color/colorWhite"
            android:padding="@dimen/fab_margin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:id="@+id/imageView3"
                android:layout_gravity="center"
                android:src="@drawable/nome_bozo_black"
                android:layout_alignBottom="@+id/btn_jogar"
                android:layout_alignRight="@+id/btn_jogar"
                android:layout_alignEnd="@+id/btn_jogar" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_jogar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_white"
                fab:fab_colorNormal="@color/colorFAB"
                fab:fab_colorPressed="@color/colorFABPressed"
                android:layout_gravity="right|center_vertical" />


        </FrameLayout>




    </RelativeLayout>

</LinearLayout>