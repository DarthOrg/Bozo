<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.darthorg.bozo.NovaPartida"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:weightSum="1">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTrasnparente"
        app:elevation="0dp">

        <!--TOOLBAR TOPO-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn_jogar"
            android:background="@drawable/ic_jogar"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/imageView"
            android:src="@drawable/img_tela_principal"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/nome_bozo" />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/btn_instrucoes"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/ic_instrucoes"
            android:layout_marginBottom="50dp" />

    </FrameLayout>

</LinearLayout>