<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.darthorg.bozo.NovaPartida"
    android:orientation="vertical"
    android:background="@color/colorFundoPartida"
    android:weightSum="1">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="5dp">

        <!--TOOLBAR TOPO-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:id="@+id/frameLayout">
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/btn_jogar"
                android:background="@drawable/ic_jogar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Jogar"
                    android:textSize="10dp"
                    android:id="@+id/txt_jogar"
                    android:layout_below="@+id/btn_jogar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|bottom" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_alignTop="@+id/frameLayout"
                android:layout_centerHorizontal="true"
                android:id="@+id/frameLayout3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Configurações"
                    android:textSize="10dp"
                    android:id="@+id/txt_configuracoes"
                    android:layout_below="@+id/btn_jogar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|bottom" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn_configuracoes"
                    android:background="@drawable/ic_configuracoes"
                    android:layout_gravity="center_horizontal|top" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_alignTop="@+id/frameLayout3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Sobre"
                    android:textSize="10dp"
                    android:id="@+id/txt_sobre"
                    android:layout_below="@+id/button2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|bottom" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn_sobre"
                    android:background="@drawable/ic_sobre"
                    android:layout_gravity="center_horizontal|top" />
            </FrameLayout>


        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Suas partidas"
            android:id="@+id/txt_lista_partidas"
            android:layout_gravity="center"
            android:textSize="12dp"
            android:textColor="@color/colorWhite" />
    </FrameLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_partidas"
        android:layout_gravity="center_horizontal" />

</LinearLayout>