<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFundoPartida"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtGanhou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganhou"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorGreenA700"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:paddingTop="5dp"
            android:text="Quer jogar uma nova rodada?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorCinza" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btnSair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:background="@color/colorTrasnparente"
            android:text="Sair"
            android:textColor="@color/colorCinza" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|center_vertical"
            android:layout_toLeftOf="@+id/btnJogar"
            android:layout_toStartOf="@+id/btnJogar"
            android:background="@color/colorTrasnparente"
            android:text="@string/Cancelar"
            android:textColor="@color/colorCinza" />

        <Button
            android:id="@+id/btnJogar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|center_vertical"
            android:background="@color/colorTrasnparente"
            android:text="Jogar"
            android:textColor="@color/colorAccent" />

    </RelativeLayout>
</LinearLayout>
