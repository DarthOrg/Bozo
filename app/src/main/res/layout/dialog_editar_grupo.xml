<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundoPartida"
    android:orientation="vertical"
    android:theme="@style/AppTheme.Dark">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_jogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:textColorHint="@color/colorCinza"
        app:counterEnabled="false"
        app:errorEnabled="true">

        <EditText
            android:id="@+id/edit_nome_grupo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/AdicionarJogador"
            android:inputType="textCapCharacters|text"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorCinza" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="8dp">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|center_vertical"
            android:layout_toLeftOf="@+id/btnAdicionarJogador"
            android:layout_toStartOf="@+id/btnAdicionarJogador"
            android:background="@color/colorTrasnparente"
            android:text="@string/Cancelar"
            android:textColor="@color/colorCinza" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right|center_vertical"
            android:background="@color/colorTrasnparente"
            android:text="@string/Salvar"
            android:textColor="@color/colorAccent" />


    </LinearLayout>

</LinearLayout>
