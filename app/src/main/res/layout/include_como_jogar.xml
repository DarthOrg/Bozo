<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1600dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:id="@+id/imageView21"
                android:src="@drawable/img_bozo"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tituloInstrucoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comoJogar"
                android:textColor="@android:color/white"
                android:textSize="@dimen/slide_title"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Texto1"
                android:id="@+id/textView3"
                android:layout_below="@+id/tituloInstrucoes"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="@color/colorAccent800" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView22"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:src="@drawable/copo_bozo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Texto2"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="@color/colorFundo"
                android:layout_below="@+id/imageView22"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="25dp" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Texto3"
                android:id="@+id/textView6"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="@color/colorAccent800"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Texto4"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="@color/colorFundo"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:layout_margin="25dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Marcacao"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Texto5"
                android:id="@+id/textView12"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="@color/colorFundoPartida"
                android:layout_below="@+id/textView11"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp" />


            <!--Tabela-->
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_below="@+id/textView12"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:id="@+id/linearLayout2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:text="Áz"
                            android:textSize="13dp"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorTrasnparente"
                            android:id="@+id/btnAz"
                            style="@style/AlertDialog.AppCompat" />


                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhiteTransparente"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:text="Full"
                            android:textSize="13dp"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorTrasnparente"
                            android:id="@+id/btnFull"
                            style="@style/AlertDialog.AppCompat" />


                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhiteTransparente"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:text="Quadra"
                            android:textSize="13dp"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorTrasnparente"
                            android:id="@+id/btnQuadra"
                            style="@style/AlertDialog.AppCompat" />


                    </FrameLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorWhiteTransparente"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:text="Duque"
                            android:textSize="13dp"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorTrasnparente"
                            android:id="@+id/btnDuque"
                            style="@style/AlertDialog.AppCompat" />


                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhiteTransparente"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:text="Seguida"
                            android:textSize="13dp"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorTrasnparente"
                            android:id="@+id/btnSeguida"
                            style="@style/AlertDialog.AppCompat" />


                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhiteTransparente"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnQuina"
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:text="Quina"
                            android:textSize="13dp"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorTrasnparente"
                            style="@style/AlertDialog.AppCompat" />


                    </FrameLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorWhiteTransparente"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:text="Terno"
                            android:textSize="13dp"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorTrasnparente"
                            android:id="@+id/btnTerno"
                            style="@style/AlertDialog.AppCompat" />


                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhiteTransparente"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:text="Quadrada"
                            android:textSize="13dp"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorTrasnparente"
                            android:id="@+id/btnQuadrada"
                            style="@style/AlertDialog.AppCompat" />


                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhiteTransparente"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:text="Sena"
                            android:textSize="13dp"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorTrasnparente"
                            android:id="@+id/btnSena"
                            style="@style/AlertDialog.AppCompat" />


                    </FrameLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorWhiteTransparente"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:background="@color/colorTrasnparente"
                            android:textSize="20dp"
                            android:textColor="@color/colorWhite" />



                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhiteTransparente"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:text="General"
                            android:textSize="13dp"
                            android:textColor="@color/colorWhite"
                            android:background="@color/colorTrasnparente"
                            android:id="@+id/btnGeneral"
                            style="@style/AlertDialog.AppCompat" />


                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorWhiteTransparente"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="65dp"
                            android:background="@color/colorTrasnparente"
                            android:textSize="20dp"
                            android:textColor="@color/colorWhite" />



                    </FrameLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:background="@color/colorWhiteTransparente"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Texto6"
                android:id="@+id/textView15"
                android:textAlignment="center"
                android:textSize="13dp"
                android:textColor="@color/colorFundoPartida"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:layout_margin="25dp" />
        </RelativeLayout>




    </LinearLayout>

</ScrollView>