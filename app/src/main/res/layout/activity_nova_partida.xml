<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".view.NovaPartida"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTrasnparente"
            app:elevation="0dp">

            <!--TOOLBAR TOPO-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>

        </android.support.design.widget.AppBarLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/DadosDoGrupo"
            android:id="@+id/Titulo"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:textColor="@color/colorAccent800" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/InfoDadosGrupo"
        android:id="@+id/TextoInfo"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorCinza" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/novoJogador"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:elevation="0dp"
                android:background="@drawable/circulo_accent_light"
                android:backgroundTint="@color/colorStatusBar"
                android:tint="@color/colorWhite"
                android:layout_margin="16dp"
                android:src="@drawable/ic_mais_fab_white" />

            <ImageButton
                android:id="@+id/btnSair"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:elevation="0dp"
                android:background="@drawable/circulo_accent_light"
                android:backgroundTint="@color/colorStatusBar"
                android:tint="@color/colorWhite"
                android:layout_margin="16dp"
                android:src="@drawable/ic_sair"
                android:visibility="gone" />

            <Button
                android:id="@+id/contagemJogadores"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:elevation="5dp"
                android:text="0"
                android:textColor="@color/colorWhite"
                android:background="@drawable/circulo_accent_light"
                android:backgroundTint="@color/colorAccent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="57dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/NomedoGrupo"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="@color/colorCinza"
            android:layout_weight="1"
            android:id="@+id/tvNomeGrupo" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nome do grupo"
            android:ems="10"
            android:id="@+id/editText_nomePartida"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:background="@color/colorTrasnparente"
            android:tint="@color/colorBlack"
            android:src="@drawable/ic_editar"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp" />

        <ImageButton
            android:id="@+id/btnConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:background="@color/colorTrasnparente"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_confirmar"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            android:backgroundTintMode="multiply" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_nome_novo_jogador"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layerType="hardware"
            android:hint="Digitar nome do jogador..."
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnAdicionarJogador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:background="@color/colorTrasnparente"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_confirmado_verde"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />


    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_jogadores"
        android:cacheColorHint="@color/colorBlack" />

    </LinearLayout>
    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Iniciar"
        android:textColor="@color/colorWhite"
        android:elevation="5dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
