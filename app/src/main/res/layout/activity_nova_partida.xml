<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".view.NovaPartida"
    android:orientation="vertical"
    android:background="@color/colorFundoPartida"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:id="@+id/view">

            <!--TOOLBAR TOPO-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:theme="@style/AppTheme.WhiteBotton"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="@color/colorAccent"
                    android:textSize="25dp"
                    android:textAllCaps="true"
                    android:text="@string/txtNomeGrupoExemplo"
                    android:textColorLink="@color/colorFundo"
                    android:nestedScrollingEnabled="true"
                    android:linksClickable="false"
                    android:hint="Nome do seu grupo"
                    android:textColorHint="@color/colorWhiteTransparente"
                    android:ems="10"
                    android:id="@+id/editText_nomePartida"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DÃª o nome ao grupo"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/textView3"
                    android:paddingTop="15dp"
                    android:paddingLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>


        <!--Todo:Criar contagem da lista de jogadores-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Participantes: 2/10"
            android:id="@+id/contagemJogadores"
            android:textColor="@color/colorFundo"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_view_jogadores"
            android:layout_marginTop="190dp"
            android:cacheColorHint="@color/colorBlack"
            android:layout_gravity="center_horizontal" />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fab_add_jogador"
            fab:fab_colorNormal="@color/colorFab"
            fab:fab_colorPressed="@color/colorFabPressed"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_alignBottom="@+id/contagemJogadores"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>






</LinearLayout>
