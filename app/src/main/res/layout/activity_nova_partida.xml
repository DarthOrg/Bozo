<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paginaDadosGrupo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundoInstruções"
    android:orientation="vertical"
    tools:context=".view.NovaPartida">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.WhiteBotton"
        android:background="@color/colorAccent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--TOOLBAR TOPO-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/novo_grupo"/>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <!--Editar nome grupo-->
    <LinearLayout
        android:id="@+id/campoEditarNomegrupo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_jogador"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:theme="@style/AppTheme.Dark"
            android:textColorHint="@color/colorCinza"
            app:counterEnabled="false">

            <EditText
                android:id="@+id/edit_nome_grupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/nome_do_grupo"
                android:theme="@style/AppTheme.Dark"
                android:inputType="textCapCharacters|text"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorStatusBar" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/campoEditarNomegrupo"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnAddJogador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/adicionar_jogador"
                android:textColor="@color/colorCinza"
                android:background="@color/colorWhite"
                android:layout_gravity="center_horizontal" />

            <ListView
                android:id="@+id/list_view_jogadores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/colorBlack" />

        </LinearLayout>

    </android.support.v7.widget.CardView>






</RelativeLayout>
