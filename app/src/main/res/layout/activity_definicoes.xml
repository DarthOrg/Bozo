<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_definicoes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.darthorg.bozo.view.Definicoes">

<android.support.v7.widget.Toolbar
    android:theme="@style/AppTheme.WhiteBotton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccentDark"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    app:title="@string/definicoes"
    android:id="@+id/toolbar_RS"
    android:elevation="5dp"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar_RS"
    android:layout_centerHorizontal="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_RS"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:text="@string/ligado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:textSize="14sp"
                android:id="@+id/txtLuzFundo" />

            <Switch
                android:text="@string/luz_de_fundo_no_marcador"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/swirchLuzFundo"
                android:padding="16dp"
                android:autoText="false"
                android:textOn="Ativo"
                android:textOff="NÃ£o quero"
                android:checked="true"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAllCaps="false" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlackTransparente3"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <TextView
                    android:text="@string/valoresPecas1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textAlignment="textStart"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:textSize="14sp"
                    android:id="@+id/txtValorespecas" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/colorTrasnparente"
                    android:text="@string/valoresTabela"
                    android:textAlignment="textStart"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:textAllCaps="false"
                    android:id="@+id/btnValoresPecas"
                    android:textSize="18sp" />

            </RelativeLayout>

        </LinearLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlackTransparente3"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorTrasnparente"
                android:text="@string/sobre"
                android:layout_centerVertical="true"
                android:textAlignment="textStart"
                android:paddingLeft="16dp"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:id="@+id/btnSobre" />


        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorBlackTransparente3"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"/>


    </LinearLayout>
</ScrollView>


</LinearLayout>


