<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTrasnparente"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTrasnparente"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">


                <RelativeLayout
                    android:id="@+id/algo"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <Button
                        android:text="250"
                        android:background="@drawable/circulo_accent_light"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:textSize="20dp"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/tvNumRodada"/>


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_toEndOf="@+id/algo"
                    android:layout_toRightOf="@+id/algo"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvVencedorRodada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tvNumRodada"
                        android:layout_toEndOf="@+id/tvNumRodada"
                        android:layout_toRightOf="@+id/tvNumRodada"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/tvVencedorRodada"
                            android:layout_alignStart="@+id/tvVencedorRodada"
                            android:layout_below="@+id/tvVencedorRodada"
                            android:text="@string/ganhou_com"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorCinza"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/btnPontuacao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvVencedorRodada"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toEndOf="@+id/btnPontuacao"
                            android:layout_toRightOf="@+id/btnPontuacao"
                            android:text="3213213"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorCinza"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvVencedorRodada"
                            android:layout_toEndOf="@+id/btnPontuacao"
                            android:layout_toRightOf="@+id/btnPontuacao"
                            android:text="@string/pontos"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/colorCinza"
                            android:textSize="13dp" />
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>




</LinearLayout>