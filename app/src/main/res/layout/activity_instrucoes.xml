<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_intrucoes"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">


        <ImageButton
            android:id="@+id/btn_sair"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/circulo_transparente"
            android:src="@drawable/ic_sair"
            android:backgroundTint="@color/colorTrasnparente"
            app:tint="@color/colorCinza"
            />

        <LinearLayout
            android:id="@+id/layoutDots_instrucoes"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginRight="16dp"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"></LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tituloInstrucoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/colorStatusBar"
            android:textSize="@dimen/slide_title"
            android:textStyle="bold" />


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txtAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="15dp"
            android:textColor="@color/colorCinza"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/audio_off"
            android:layout_toEndOf="@id/audio_off"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:id="@+id/btn_anterior"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_voltar"
            app:tint="@color/colorCinza"
            android:layout_marginLeft="16dp"
            android:visibility="invisible"
            android:background="@drawable/circulo_transparente"/>

        <ImageButton
            android:id="@+id/audio"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_audio_on"
            android:layout_margin="5dp"
            app:tint="@color/colorCinza"
            android:layout_centerVertical="true"
            android:onClick="doSomething"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circulo_transparente"/>



        <ImageButton
            android:id="@+id/audio_off"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:visibility="gone"
            android:elevation="3dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_audio_off"
            app:tint="@color/colorCinza"
            android:layout_centerVertical="true"
            android:onClick="doSomething"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circulo_white"/>



        <ImageButton
            android:id="@+id/btn_proximo"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_proximo"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            app:tint="@color/colorCinza"
            android:background="@drawable/circulo_transparente"/>

    </RelativeLayout>




</RelativeLayout>
