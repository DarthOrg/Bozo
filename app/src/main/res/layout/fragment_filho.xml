<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundoPartida">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view123456789"
        app:elevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/txtResultadoJogador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorCinza"
                android:textSize="75dp"
                android:textAlignment="textEnd"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <RelativeLayout
                android:id="@+id/fundoresultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="invisible">
                <ImageButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTrasnparente"
                    android:src="@drawable/ic_fundo_pontos"
                    android:tint="@color/colorGreenA400"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Ganhando"
                    android:textSize="20dp"
                    android:id="@+id/txtGanhando"
                    android:backgroundTint="@color/colorGreenA400"
                    android:textColor="@color/colorWhite"
                    android:padding="20dp"
                    android:layout_marginLeft="16dp" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>


    <include layout="@layout/include_marcador_p_a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view123456789" />


</RelativeLayout>


