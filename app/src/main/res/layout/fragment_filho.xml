<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentDark">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:background="@color/colorAccentDark"/>

        <LinearLayout
            android:id="@+id/fundoresultado"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/colorGreenDark"/>

        <LinearLayout
            android:id="@+id/topo"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorTrasnparente"/>

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorTrasnparente"
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtResultadoJogador"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorWhite"
                    android:textSize="70dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/txtGanhando"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GANHANDO"
                    android:textColor="@color/colorWhiteTransparente"
                    android:visibility="visible"
                    android:textSize="15dp"
                    android:layout_marginTop="-15dp"
                    android:layout_centerInParent="false"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/supostaTab"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorTrasnparente"/>

        </LinearLayout>



        <include layout="@layout/include_marcador_p_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topo" />

    </RelativeLayout>



</RelativeLayout>


