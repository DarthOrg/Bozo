<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFundoPartida"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="14dp">



        <EditText
            android:theme="@style/AppTheme.Accent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:textColor="@color/colorBlack"
            android:hint="@string/HintValorDado"
            android:textColorHint="@color/colorTextoHint"
            android:ems="10"
            android:id="@+id/etPonto" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Riscar"
            android:id="@+id/btnRiscar"
            android:layout_gravity="right|center_vertical"
            android:textColor="@color/colorRed"
            android:layout_alignParentRight="true"
            android:background="@color/colorTrasnparente" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:paddingBottom="14dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancelar"
            android:id="@+id/btnCancelar"
            android:layout_gravity="right|center_vertical"
            android:textColor="@color/colorCinza"
            android:background="@color/colorTrasnparente" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Marcar"
            android:id="@+id/btnMarcar"
            android:layout_gravity="right|center_vertical"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            android:background="@color/colorTrasnparente" />

    </RelativeLayout>

</LinearLayout>

