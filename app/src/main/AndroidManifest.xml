    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:theme="@style/ThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Inicio" />
        <activity android:name=".NovaPartida"
            android:theme="@style/ThemeNovaPartida"/>
        <activity
            android:name=".PartidaAberta"
            android:theme="@style/ThemePartidaAberta" />
        <activity android:name=".Placar"
            android:theme="@style/ThemePlacar"></activity>
    </application>

</manifest>